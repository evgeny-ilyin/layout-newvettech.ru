{
	"semi": true,
	"singleQuote": true,
	"tabWidth": 2,
	"useTabs": true,
	"trailingComma": "es5",
	"bracketSpacing": true,
	"printWidth": 120,
	"endOfLine": "auto",
	"proseWrap": "always",
	"overrides": [
		{
			"files": ["*.js", "*.ts", "*.jsx", "*.tsx"],
			"options": {
				"printWidth": 100
			}
		}
	]
}
